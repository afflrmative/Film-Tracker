<%= form_with model: [ @film, @film.comments.build ] do |form| %>
  <div class="card">
    <div class="card-body"> 
      <p>
        <%= form.label :commenter %><br>
        <%= form.text_field :commenter %>
      </p>
      
      <p>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
      </p>
      
      <p>
          <%= form.label :status %><br>
          <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
      </p>
      
      <p>
        <%= form.submit %>
      </p>
    </div>
  </div>

  <% end %>
  