
<%= form_with model: film do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% film.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% film.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>
  
  <div>
  <%= form.label :actors %><br>
  <%= form.text_area :actors %>
  <% film.errors.full_messages_for(:actors).each do |message| %>
      <div><%= message %></div>
  <% end %>
</div>

<div>
<%= form.label :director %><br>
<%= form.text_area :director %>
<% film.errors.full_messages_for(:director).each do |message| %>
    <div><%= message %></div>
<% end %>
</div>

<div>
<%= form.label :rating %><br>
<%= form.text_area :rating %>
<% film.errors.full_messages_for(:rating).each do |message| %>
    <div><%= message %></div>
<% end %>
</div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
