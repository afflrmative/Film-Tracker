<div class="card">
  <h3 class="card-header card-title"><%= @film.title %></h3>
    <div class="card-body">
      <%= form_with model: film do |form| %>
        <div class="mb-3">
          <%= form.label :title %><br>
          <%= form.text_field(:title, {:class => 'form-control'}) %>
          <% film.errors.full_messages_for(:title).each do |message| %>
              <div><%= message %></div>
          <% end %>
        </div>

        <div class="mb-3">
          <%= form.label :description %><br>
          <%= form.text_area(:description, {:class => 'form-control'}) %>
          <% film.errors.full_messages_for(:description).each do |message| %>
              <div><%= message %></div>
          <% end %>
        </div>
        
        <div>
          <%= form.label :actors %><br>
          <%= form.text_area(:actors, {:class => 'form-control'}) %>
          <% film.errors.full_messages_for(:actors).each do |message| %>
            <div><%= message %></div>
        <% end %>
      </div>

        <div>
          <%= form.label :director %><br>
          <%= form.text_area(:director, {:class => 'form-control'}) %>
          <% film.errors.full_messages_for(:director).each do |message| %>
            <div><%= message %></div>
        <% end %>
        </div>

        <div>
          <%= form.label :rating %><br>
          <%= form.text_area(:rating, {:class => 'form-control'}) %>
          <% film.errors.full_messages_for(:rating).each do |message| %>
            <div><%= message %></div>
        <% end %>
        </div>

        <div>
          <%= form.label :time %><br>
          <%= form.text_area(:time, {:class => 'form-control'}) %>
          <% film.errors.full_messages_for(:time).each do |message| %>
            <div><%= message %></div>
        <% end %>
        </div>

        <div>
          <%= form.label :genre %><br>
          <%= form.text_area(:genre, {:class => 'form-control'}) %>
          <% film.errors.full_messages_for(:genre).each do |message| %>
            <div><%= message %></div>
        <% end %>

        <div>
          <%= form.label :status %><br>
          <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
        </div>

        </div>

        <div>
          <%= form.submit %>
        </div>
      <% end %>
      <a class="btn btn-outline-dark" class href="http://127.0.0.1:3000/films">Повернутись до списку</a>
    </div>
</div>
